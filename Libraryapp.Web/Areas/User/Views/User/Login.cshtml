@model LibraryApp.Models.ViewModels.LoginVM
@{
    Layout = "_LogIn";
}

<partial name="_Notification" />

<link rel="stylesheet" href="~/css/style.css" />
<div class="row  d-flex align-items-center p-3 justify-content-center" id="bg">
    <div class=" row d-flex  align-items-center justify-content-center">
        <div class=" col-lg-6">
            <div class="card card-primary card-outline card-outline-tabs">

                <div class="card-body">
                    <h3 class="login-box-msg"><b>User Sign in</b></h3>

                    <form  method="post" class="needs-validation" novalidate>
                        <div class="input-group mb-3">
                            <div class="input-group">
                            <input asp-for="email" type="email" class="form-control" placeholder="Email" id="input">
                            <div class="input-group-append">
                                <div class="input-group-text rounded-right">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                            </div>
                            <div class="invalid-feedback">
                                Please provide an email.
                            </div >
                            <div class="">
                             <span asp-validation-for="email" class="text-danger"></span> 
                            </div>

                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group">
                            <input asp-for="password" type="password" class="form-control" placeholder="Password" id="input">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="invalid-feedback">
                                Please provide a password.
                            </div>

                             <span asp-validation-for="password" class="text-danger"></span> 
                        </div>
                        @if (ViewBag.Message != null)
                            {
                                <div class="alert  alert-danger pr-2"style="font-size:smaller;" role="alert">
                                incorrect email or password
                                </div>
                            }
                        
                            
                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="remember">
                                    <label for="remember">
                                        Remember Me
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <!-- /.social-auth-links -->

                    <p class="mb-1">
                        <a asp-area="Admin" asp-controller="Employees" asp-action="Login">Employee Login</a>
                    </p>
                    <p class="mb-0">
                        <a asp-controller="User" asp-action="Register">Register a new membership</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')
            var inputs = document.querySelectorAll('input')
            
            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity() !! inputs.values==null) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
