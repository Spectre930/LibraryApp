@model IEnumerable<Purchases>

<partial name="_Notification" />

<div class="container p-3 justirfy-content-center">
    <div class="row justirfy-content-center">
        <!-- Content Wrapper. Contains page content -->
        <div class="">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="text-white">Purchased Books</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item">
                                    <a asp-controller="UserBooks" asp-action="Index" class="btn btn-success">
                                        Purchase another Book
                                    </a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="">
                            <div class="card">
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Title
                                                </th>
                                                <th>
                                                    Quantity
                                                </th>
                                                <th>
                                                    Total Price
                                                </th>
                                                <th>
                                                    Purchase Date
                                                </th>
                                            </tr>
                                        </thead>

                                        <tbody class="table-group-divider ">
                                            @foreach (var obj in Model)
                                            {
                                                <tr class="">
                                                    <td>
                                                        @obj.Book.Title
                                                    </td>
                                                    <td>
                                                        @obj.Quantity
                                                    </td>
                                                    <td>
                                                        @obj.TotalPrice.ToString("c")
                                                    </td>
                                                    <td>
                                                        @obj.PurchaseDate
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>

    </div>
</div>

