@model Employees

<partial name="_Notification" />

@* <form method="post" asp-action="Edit"> *@
    <input asp-for="Id" hidden class="form-control" disabled />
    <div class="border p-3 mt-4 row rounded bg-light">
        <div class="row pb-2">
            <h2 class="text-white bg-warning rounded">Employee Info</h2>
            <hr />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="F_Name">First Name</label>
            <input asp-for="F_Name" class="form-control" disabled />
            <span asp-validation-for="F_Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="L_Name">Last Name</label>
            <input asp-for="L_Name" class="form-control" disabled />
            <span asp-validation-for="L_Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="DOB">Date Of Birth</label>
            <input asp-for="DOB" class="form-control" disabled />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>

        <div class="mb-3 col-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" disabled />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        @if (ViewBag.Message != null)
        {
            <div class="alert  alert-danger alert-dismissible fade show" style="font-size:smaller; width:60% ;" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-12">
            <a  asp-action="ChangePassword" asp-controller="Employees" class="btn btn-warning text-light" style="width:150px">Change Password</a>
        </div>
    </div>
@* </form> *@

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}