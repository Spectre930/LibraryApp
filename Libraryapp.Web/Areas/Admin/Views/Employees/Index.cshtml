@model IEnumerable<Employees>

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employees List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Employee
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
            <tr>
                <th>
                     First Name
                </th>
                <th>
                     Last Name
                </th>
                <th>
                     Date Of Birth
                </th>
                <th>
                     Age
                </th>
                <th>
                     Email
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Admin
                </th>
                <th></th>
                <th></th>

            </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
           <tr>
               <td width="10%">
                   @obj.F_Name
               </td>
                    <td width="10%">
                        @obj.L_Name
                    </td>
                   
                    <td width="10%">
                        @obj.DOB.Day/@obj.DOB.Month/@obj.DOB.Year
                    </td>
                    <td width="5%">
                        @obj.Age
                    </td>

                    <td width="20%">
                        @obj.Email
                    </td>

                    <td width="20%">
                        @obj.PhoneNumber
                    </td>


                    <td width="5%">
                        @if (obj.RoleId == 1) 
                        {
                                <p> Yes </p>
                        }
                        else
                        {
                        <p> No </p>
                        }
                        
                     </td>



                     <td width="10%">

                            <a asp-controller="Employees" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-1"><i class="bi bi-pencil-square"></i>Edit</a>
                    </td>
                    <td width ="10%">
                                 <a asp-controller="Employees" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1"><i class="bi bi-x-circle"></i>Delete</a>
                            
                    
                    </td>
           </tr>
        }
    </tbody>
</table>
</div>


