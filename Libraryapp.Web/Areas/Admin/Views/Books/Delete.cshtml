@model LibraryApp.Models.ViewModels.BooksIndexVM

<form method="post" asp-action="DeletePOST">
    <input asp-for="book.Id" hidden class="form-control" />
    <div class="border p-3 mt-4 row rounded bg-light">
        <div class="row pb-2">
            <h2 class="bg-danger rounded">Delete Client</h2>
            <hr />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="book.Title">Title</label>
            <input asp-for="book.Title" class="form-control" />
            <span asp-validation-for="book.Title" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="book.Copies">Copies</label>
            <input asp-for="book.Copies" class="form-control" />
            <span asp-validation-for="book.Copies" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="book.AvailableCopies">Available Copies</label>
            <input asp-for="book.AvailableCopies" class="form-control" />
            <span asp-validation-for="book.AvailableCopies" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="book.AuthPrice">Author Price</label>
            <input asp-for="book.AuthPrice" class="form-control" />
            <span asp-validation-for="book.AuthPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 col-6">
            <label asp-for="book.ListedPrice">Listed Price</label>
            <input asp-for="book.ListedPrice" class="form-control" />
            <span asp-validation-for="book.ListedPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 col-6">
            <label asp-for="book.Genre.Name">Genre</label>
            <input asp-for="book.Genre.Name" class="form-control" />
            <span asp-validation-for="book.Genre.Name" class="text-danger"></span>
        </div>

        <div class="mb-3 col-6">
            <label asp-for="book.Description">Description</label>
            <textarea asp-for="book.Description" class="form-control"></textarea>
            <span asp-validation-for="book.Description" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-5 col-6">
            <div class="dropdown">
                 <button class="btn-lg btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Authors
                </button> 
                <ul class="dropdown-menu">
                    @foreach (var a in Model.authors)
                    {
                        <li class="m-1">@a</li>
                    }
                </ul>
            </div>
        </div>
        @if (ViewBag.Message != null)
        {
            <div class="alert  alert-danger alert-dismissible fade show" style="font-size:smaller; width:60% ;" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-12">
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Books" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
