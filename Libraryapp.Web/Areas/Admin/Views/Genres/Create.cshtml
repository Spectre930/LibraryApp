@model Genres

<form method="post">
    <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            <h2 class="text-bg-success">Create Genre</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3 col-6">
            <label asp-for="Name">Genre Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
       
        <div class="col-12">
        <button type="submit" class="btn btn-success" style="width:150px">Create</button>
        <a asp-controller="Genres" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}