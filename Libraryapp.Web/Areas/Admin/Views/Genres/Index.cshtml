@model IEnumerable<Genres>

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Genres List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Genres" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Genre
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
            <tr>
                <th>
                    Genre Name
                </th>
            </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
           <tr>
               <td width="50%">
                   @obj.Name
               </td>
                    <td width="50%">
                   
                            <a asp-controller="Genres" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-1"><i class="bi bi-pencil-square"></i>Edit</a>
                                 <a asp-controller="Genres" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1"><i class="bi bi-x-circle"></i>Delete</a>
           </tr> 
        }
    </tbody>
</table>
</div>


