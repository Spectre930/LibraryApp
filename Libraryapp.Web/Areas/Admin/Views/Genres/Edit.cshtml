@model Genres

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden class="form-control" />
    <div class="border p-3 mt-4 row  bg-light">
        <div class="row pb-2">
            <h2 class="bg-warning">Edit Genre</h2>
            <hr />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Name">Genre Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @if (ViewBag.Message != null)
        {
            <div class="alert  alert-danger alert-dismissible fade show" style="font-size:smaller; width:60% ;" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-12">
            <button type="submit" class="btn btn-warning" style="width:150px">Update</button>
            <a asp-controller="Genres" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}